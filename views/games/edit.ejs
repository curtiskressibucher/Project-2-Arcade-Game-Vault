<%- include('../partials/header') %>

<body>
    <h1>Edit Game</h1>
    <form action="/games/<%= game._id %>/edit" method="POST">

        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= game.title %>" required>

        <label for="genre">Genre:</label>
        <input type="text" id="genre" name="genre" value="<%= game.genre %>" required>

        <label for="platform">Platform:</label>
        <input type="text" id="platform" name="platform" value="<%= game.platform %>" required>

        <label for="releaseYear">Release Year:</label>
        <input type="date" id="releaseYear" name="releaseYear" value="<%= game.releaseYear %>" required>

        <label for="image">Image URL:</label>
        <input type="text" id="image" name="image" value="<%= game.image %>" required>

        <button type="submit" class="submit-buttons">Update Game</button>
    </form>
</body>

<%- include('../partials/footer') %>