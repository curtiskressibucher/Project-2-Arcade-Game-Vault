<%- include('../partials/header') %>

<h1>Reviews</h1>

<div class="search-bar">
    <form action="/reviews/search" method="GET">
        <div class="search-container">
            <input
                type="text"
                name="query"
                placeholder="Search for a game..."
            />
            <button type="submit" class="search-button">
                <span>&#128269;</span>
            </button>
        </div>
    </form>
</div>

<div class="game-library">
    <% if (games.length > 0) { %> <% games.forEach(function(game) { %>
    <div class="game-tile">
        <img src="<%= game.image %>" alt="<%= game.title %> Image" />

        <div class="details">
            <h3><%= game.title %></h3>
            <p><strong>Genre:</strong> <%= game.genre %></p>
            <p><strong>Platform:</strong> <%= game.platform %></p>
            <p>
                <strong>Release Year:</strong> <%=
                game.releaseYear.toISOString().split('T')[0] %>
            </p>
            <div class="action-buttons">
                <a class="review-button" href="/reviews/<%= game._id %>"
                    >REVIEW</a
                >
            </div>
        </div>
    </div>
    <% }); %> <% } else { %>
    <p>No matching games found.</p>
    <% } %>
</div>

<%- include('../partials/footer') %>
