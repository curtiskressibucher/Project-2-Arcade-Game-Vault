<%- include('../partials/header') %>

<h2>Edit Tip</h2>

<form
    class="tips-and-tricks-form"
    action="/tips-and-tricks/<%= game._id %>/<%= tip._id %>/update"
    method="POST"
>
    <label for="title">Title:</label>
    <input
        type="text"
        id="title"
        name="title"
        style="resize: none"
        value="<%= tip.title %>"
        required
    />

    <label for="content">Content:</label>
    <textarea
        id="content"
        name="content"
        rows="10"
        style="resize: none"
        required
    >
<%= tip.content %></textarea
    >

    <button type="submit">Submit</button>
</form>

<div class="login-button">
    <a href="/tips-and-tricks/<%= game._id %>">Back to Game Details</a>
</div>

<%- include('../partials/footer') %>
