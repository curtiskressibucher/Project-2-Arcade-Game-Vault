<%- include('../partials/header') %>

<div class="game-details">
    <h1><%= game.title %></h1>
    <img
        class="game-image"
        src="<%= game.image %>"
        alt="<%= game.title %> Cover Image"
    />

    <div class="details">
        <p>Genre: <%= game.genre %></p>
        <p>Platform: <%= game.platform %></p>
        <p>Release Year: <%= game.releaseYear.getFullYear() %></p>


        </div>
    </div>
</div>

<% if(user) {%>
 <div class="login-button">
    <a href="/tips-and-tricks/<%= game._id %>/new" class="create-tips">
        Create Tips and Tricks
    </a>
</div>
<% } else { %>
    <div class="login-button"><a href="/login">LOGIN</a></div>
    <% } %>


<div class="tips-list">
    <h2>Tips and Tricks</h2>

    <% if (game.tips && game.tips.length > 0) { %>
        <ul>
            <% game.tips.forEach(tip => { %>

                <li class="tip-table">

                    <div class="tip-title">
                        <a href="/tips-and-tricks/<%= game._id %>/<%= tip._id %>/tip">
                            <%= tip.title %>
                        </a>
                    </div>

                    <% if (tip.content) { %>
                        <div class="tip-description"><%= tip.content %></div>
                    <% } %>

            <div class="tip-buttons">
                    <div class="tip-like">
                        <form
                            class="like-form-tip"
                            method="post"
                            action="/tips-and-tricks/<%= game._id  %>/<%= tip._id %>/like">
                            <button type="submit" class="like-button"> üëç <%= tip.likes %></button>
                        </form>
                    </div>


                    <div class="edit-delete-container">

                        <% if (user && user._id.equals(tip.user)) { %>

                            <div class="edit-form-review">
                                <a href="/tips/<%= game._id %>/<%= tip._id %>/update" class="edit-button">Edit</a>
                            </div>

                            <form
                                class="delete-form-review"
                                method="post"
                                action="/tips/<%= tip._id %>?_method=DELETE"
                                onsubmit="return confirm('Are you sure you want to delete this tip?');">

                                <button type="submit" class="delete-button">Delete</button>
                            </form>

                    <% } %>

                    </div>

            </div>

                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <h2>No tips and tricks available for this game.</h2>
    <% } %>
</div>


<%- include('../partials/footer') %>