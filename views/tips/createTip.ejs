<%- include('../partials/header') %>

<h2>Create a Tip to help players</h2>

<form class="tips-and-tricks-form" action="/tips-and-tricks/<%= game %>/new" method="POST">

    <label for="title">Title:</label>
    <input type="text" id="title" name="title" style="resize: none" required >

    <label for="content">Content:</label>
    <textarea id="content" name="content" rows="10" style="resize: none" required></textarea>

    <button type="submit">Submit</button>
</form>

<div class="login-button">
    <a href="/tips-and-tricks/<%= game %>">Back to Game Details</a>
</div>

